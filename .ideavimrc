let mapleader = ' '
set ignorecase smartcase
set hlsearch
set showmode

" Edit settings and reload
noremap <leader>; :edit ~/.ideavimrc<CR>
noremap <leader>: :source ~/.ideavimrc<CR>

" Easy clipboard
noremap <leader>y "+y
noremap <leader>Y "+Y
noremap <leader>p "+p
noremap <leader>P "+P

" IDEA mappings
" *************

noremap <leader>w :action EditorToggleShowWhitespaces<CR>
noremap <leader>u :action FindUsages<CR>

" Navigate
noremap <leader>gc :action GotoClass<CR>
noremap <leader>gf :action GotoFile<CR>
noremap <leader>gs :action GotoSymbol<CR>
noremap <leader>b :action Back<CR>
noremap <leader>f :action Forward<CR>
noremap <leader>@ :action SelectIn<CR>
noremap <leader>gd :action GotoDeclaration<CR>
noremap <leader>gi :action GotoImplementation<CR>
noremap <leader>gt :action GotoTypeDeclaration<CR>
noremap <leader>gS :action GotoSuperMethod<CR>
noremap <leader>gr :action GotoRelated<CR>
noremap <leader>gm :action MethodDown<CR>
noremap <leader>gM :action MethodUp<CR>

" Code
" These next two don't work in visual mode so use IDEA defaults of c-/ and c-s-/ instead
"noremap <leader>/ :action CommentByLineComment<CR>
"noremap <leader>? :action CommentByBlockComment<CR>

" Refactor
noremap <leader>rc :action Refactorings.QuickListPopupAction<CR>
noremap <leader>rm :action Move<CR>
noremap <leader>rr :action RenameElement<CR>

" Tools
noremap <leader>ics :action com.jetbrains.rider.interactive.csi.StartCSharpInteractive<CR>
noremap <leader>Ics :action com.jetbrains.rider.interactive.csi.SendToCSharpInteractive<CR>

" Window
noremap <leader>tco :action CloseAllEditorsButActive<CR>
noremap <leader>tcu :action CloseAllUnmodifiedEditors<CR>
noremap <leader>tj :action MoveTabDown<CR>
noremap <leader>tl :action MoveTabRight<CR>
noremap <leader>tm :action MoveEditorToOppositeTabGroup<CR>
